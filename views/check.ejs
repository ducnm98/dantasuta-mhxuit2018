<!DOCTYPE html>
<html lang="en">
<head>
	<title>Dân ta sử ta</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="/images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/fonts/iconic/css/material-design-iconic-font.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animsition/css/animsition.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="/vendor/daterangepicker/daterangepicker.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
<!--===============================================================================================-->
</head>
<body class="body-bg">
	
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Câu hỏi</th>
        <th scope="col">Trả lời 1</th>
        <th scope="col">Trả lời 2</th>
        <th scope="col">Trả lời 3</th>
        <th scope="col">Trả lời 4</th>
        <th scope="col">Hanh Dong</th>
      </tr>
    </thead>
    <tbody>
      <% result.map((item, index) => { %>
        <tr>
          <th scope="row"><%- index + 1%></th>
          <th><%- item.questionName %></th>
          <% item.answers.map(a => { %>
            <% if (a.isAnswer) { %>
              <th style="background-color: yellow"><%- a.answerName %></th>
            <% } else { %>
              <th><%- a.answerName %></th>
            <% } %>
          <% }) %>
          <th><ul><li><a title="Xoá quận" class="chinh-sua touch-link" data-toggle="modal" data-target="#remove-district-<%- item._id %>">
              <i class="fa fa-remove"></i>
              </a></li></ul></th>
        </tr>
        <!-- Remove Wards for district Begin -->
        <div id="remove-district-<%- item._id %>" class="modal" role="dialog">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h3>Xoá Câu hỏi</h3>
                  <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <p id="modal-test-view-content"></p>
                  <form method="POST" action="/remove/<%- item._id %>">
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-primary">Xoá Câu hỏi</button>
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!-- Remove Wards for district End -->
      <% }) %>
    </tbody>
  </table>
	

	<div id="dropDownSelect1"></div>
	
<!--===============================================================================================-->
	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/bootstrap/js/popper.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/daterangepicker/moment.min.js"></script>
	<script src="/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
	<script src="/js/main.js"></script>

</body>
</html>